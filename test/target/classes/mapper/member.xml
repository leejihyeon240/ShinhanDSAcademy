<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
	<!-- 회원 목록 -->
	<select id="memberList" resultType="chapter06.MemberVO"
		parameterType="chapter06.MemberVO">
		SELECT * FROM t_member
		<where>
			<if test="searchWord != null and searchWord != ''">
				<if test="searchType == 'all'"> id LIKE '%${searchWord}%' OR name LIKE
					'%${searchWord}%' </if>
				<if test="searchType != 'all'"> ${searchType} LIKE '%${searchWord}%' </if>
			</if>
		</where>
	</select>
	<!-- 회원 조회 -->
	<select id="memberOne" resultType="chapter06.MemberVO"
		parameterType="String"> SELECT * FROM t_member WHERE id=#{id} </select>
	<!-- 회원 등록 -->
	<insert id="memberInsert" parameterType="chapter06.MemberVO"> INSERT INTO t_member (
		id, pwd, name, email, joindate ) VALUES ( #{id}, #{pwd}, #{name},
		#{email}, SYSDATE ) </insert>
</mapper>

