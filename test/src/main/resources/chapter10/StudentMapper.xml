<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="chapter10.StudentMapper">

	<!-- resultMap(결과) -->
	<resultMap type="chapter10.StudentVO" id="svo">
		<result column="grade" property="year"/>
	</resultMap>
	
	<sql id="whereSql">
		<where>
			<!-- 검색어를 입력해서 검색한 경우 -->
			<if test="searchWord != null and searchWord != ''">
				<if test="searchType == 'all'">
					id LIKE '%${searchWord}%' OR name LIKE '%${searchWord}%'
				</if>
				<if test="searchType != 'all'">
					${searchType} LIKE '%${searchWord}%'
				</if>
			</if>
			<!-- 학년 검색한 경우 -->
			<if test="searchGrade > 0">
				AND grade = #{searchGrade}
			</if>
			<!-- 학과 검색한 경우 -->
			<if test="searchMajor != null">
				AND major1 IN 
				<foreach collection="searchMajor" item="m" open="(" close=")" separator=",">
					#{m}
				</foreach>
			</if>
		</where>
	</sql>

	<select id="list" parameterType="chapter10.StudentVO" resultType="chapter10.StudentVO">
		SELECT 
			student.studno, student.id, student.name, student.grade, 
			(SELECT name FROM professor WHERE no = student.profno) profname 
		FROM student
		<include refid="whereSql"/>
	</select>
	<select id="count" parameterType="chapter10.StudentVO" resultType="int">
		SELECT COUNT(*) FROM student
		<include refid="whereSql"/>
	</select>
	
	<insert id="insert" parameterType="chapter10.StudentVO">
		INSERT INTO student (id, name, grade, jumin) 
		VALUES (#{id}, #{name}, #{grade}, #{jumin})
		<selectKey order="AFTER" keyProperty="studno" resultType="int">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	<insert id="insertHobby" parameterType="chapter10.HobbyVO">
		INSERT INTO hobby (studno, name)
		VALUES (#{studno}, #{name})
	</insert>
	
</mapper>